<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plainjimbo.spotifystreamer.ArtistTrackListActivity" >

    <fragment
        android:id="@+id/fragment_artist_search"
        android:name="com.plainjimbo.spotifystreamer.ArtistSearchFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_artist_search" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/medium_gray"/>

    <FrameLayout
        android:id="@+id/artist_track_list_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
